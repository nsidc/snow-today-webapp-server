{
  "type": "object",
  "patternProperties": {
    "^[0-9]+$": {
      "type": "object",
      "description": "A colormap.",
      "properties": {
        "name": { "type": "string" },
        "colors": {
          "type": "array",
          "description": "A list of RGB (3-tuple) or RGBA (4-tuple) colors in this colormap.",
          "items": {
            "type": "array",
            "items": {
              "type": "integer"
            },
            "minItems": 3,
            "maxItems": 4
          }
        }
      },
      "required": ["colors", "name"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
