{
  "type": "object",
  "description": "Hierarchy of sub-region collections and their members. Collections contain sub-regions, and sub-regions may have collections at an arbitrary level of nesting.",
  "properties": {
    "collections": {
      "type": "object",
      "description": "Collections of sub-regions identified by a unique string ID, e.g. 'huc4'.",
      "patternProperties": {
        "^.*$": {
          "type": "object",
          "description": "A collection of sub-regions.",
          "properties": {
            "regions": {
              "type": "object",
              "description": "Members of a sub-region collection.",
              "patternProperties": {
                "^[0-9]+$": {
                  "type": "object",
                  "description": "A sub-region collection member.",
                  "properties": {
                    "collections": { "$ref": "#/properties/collections" }
                  },
                  "required": [],
                  "additionalProperties": false
                }
              },
              "additionalProperties": false
            }
          },
          "required": [],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  }
}
