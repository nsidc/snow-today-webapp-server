{
  "type": "object",
  "description": "Mapping of satellite variable unique IDs to properties",
  "patternProperties": {
    "^.*$": {
      "type": "object",
      "properties": {
        "type": {"type": "string", "enum": ["variable", "notprocessed"]},
        "default": {"type": "boolean"},
        "enabled": {"type": "boolean"},
        "longname": {"type": "string"},
        "helptext": {"type": "string"},
        "cog_path": {"type": "string"},
        "unit_of_measurement": {"type": "string"},
        "nodata_value": {"type": "integer"},
        "colormap": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {
              "type": "integer"
            },
            "minItems": 3,
            "maxItems": 4
          }
        },
        "colormap_value_range": {
          "type": "array",
          "items": {"type": "number"},
          "minItems": 2,
          "maxItems": 2
        },
        "transparent_zero": {"type": "boolean"}
      },
      "required": [
        "type",
        "longname",
        "helptext",
        "cog_path",
        "unit_of_measurement",
        "nodata_value",
        "colormap",
        "colormap_value_range",
        "transparent_zero"
      ],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
