{
  "type": "object",
  "description": "Mapping of satellite variable unique IDs to properties",
  "patternProperties": {
    "^.*$": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["raster", "raster_notprocessed", "point_swe"]
        },
        "default": { "type": "boolean" },
        "enabled": { "type": "boolean" },
        "longname": { "type": "string" },
        "longname_plot": { "type": "string" },
        "helptext": { "type": "string" },
        "cog_path": { "type": "string" },
        "legend_path": { "type": "string" },
        "label_map_legend": { "type": "string" },
        "label_plot_yaxis": { "type": "string" },
        "value_precision": { "type": "integer" },
        "value_range": {
          "type": "array",
          "items": { "type": "integer" },
          "minItems": 2,
          "maxItems": 2
        },
        "nodata_value": { "type": "integer" },
        "colormap": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {
              "type": "integer"
            },
            "minItems": 3,
            "maxItems": 4
          }
        },
        "colormap_value_range": {
          "type": "array",
          "items": {
            "type": ["integer", "string"],
            "pattern": "^\\$[a-zA-Z]+"
          },
          "minItems": 2,
          "maxItems": 2
        },
        "transparent_zero": { "type": "boolean" }
      },
      "required": [
        "type",
        "longname",
        "longname_plot",
        "helptext",
        "cog_path",
        "label_map_legend",
        "label_plot_yaxis",
        "value_precision",
        "value_range",
        "nodata_value",
        "colormap",
        "colormap_value_range",
        "transparent_zero"
      ],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
