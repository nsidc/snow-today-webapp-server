{
  "type": "object",
  "description": "Mapping of satellite variable unique IDs to properties",
  "patternProperties": {
    "^[0-9]+$": {
      "type": "object",
      "description": "A unique satellite variable (sensor, platform, algorithm)",
      "properties": {
        "sensor": { "type": "string" },
        "platform": { "type": "string" },
        "algorithm": { "type": "string" },
        "source": { "type": "string" },
        "default": {
          "type": "boolean",
          "description": "TODO: Remove? Default is passed in at region-level in `regions/root.json`."
        },
        "enabled": { "type": "boolean" },
        "layerType": {
          "type": "string",
          "enum": ["raster", "raster_notprocessed", "point_swe"],
          "description": "We have to differentiate between variables selectable for rasters/plots, for not processed layer, and for SWE, because they go to separate user interface elements. TODO: These things should be in separate files!"
        },
        "longName": { "type": "string" },
        "longNamePlot": { "type": "string" },
        "helpText": { "type": "string" },
        "labelMapLegend": { "type": "string" },
        "labelPlotYaxis": { "type": "string" },
        "valuePrecision": { "type": "integer" },
        "valueRange": {
          "type": "array",
          "description": "The range of values this variable can realistically have",
          "items": { "type": "integer" },
          "minItems": 2,
          "maxItems": 2
        },
        "noDataValue": { "type": "integer" },
        "colormapId": { "type": "integer" },
        "transparentZero": { "type": "boolean" }
      },
      "required": [
        "sensor",
        "platform",
        "algorithm",
        "source",
        "layerType",
        "longName",
        "longNamePlot",
        "helpText",
        "labelMapLegend",
        "labelPlotYaxis",
        "valuePrecision",
        "valueRange",
        "noDataValue",
        "colormapId",
        "transparentZero"
      ],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
