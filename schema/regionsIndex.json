{
  "type": "object",
  "description": "Mapping of super-region unique IDs, e.g. '26000' or '26004', to their properties",
  "patternProperties": {
    "^[0-9]+$": {
      "type": "object",
      "description": "Super-region properties",
      "properties": {
        "longName": { "type": "string" },
        "shortName": { "type": "string" },
        "crs": { "type": "string" },
        "waterYear": {
          "type": "integer",
          "description": "The current water year",
          "minimum": 1900,
          "maximum": 3000
        },
        "waterYearStartDate": { "type": "string", "format": "date" },
        "lastDateWithData": { "type": "string", "format": "date" },
        "historicStartWaterYear": {
          "type": "integer",
          "description": "The water year at the start of available climatology",
          "minimum": 1900,
          "maximum": 3000
        },
        "historicSource": {
          "type": "string",
          "description": "The source of the climatology"
        },
        "subRegionsRelativePath": { "type": "string" },
        "subRegionsHierarchyRelativePath": { "type": "string" },
        "shapeRelativePath": { "type": "string" },
        "variables": {
          "type": "object",
          "description": "The variables available for this region",
          "patternProperties": {
            "^[0-9]+$": {
              "type": "object",
              "description": "A variable available for this region",
              "properties": {
                "default": { "type": "boolean" },
                "dataValueRange": {
                  "type": "array",
                  "description": "The range of data values that the colormap will span.",
                  "items": { "type": "integer" },
                  "minItems": 2,
                  "maxItems": 2
                },
                "geotiffRelativePath": { "type": "string" }
              }
            }
          }
        }
      },
      "required": [
        "longName",
        "shortName",
        "crs",
        "waterYear",
        "waterYearStartDate",
        "lastDateWithData",
        "historicStartWaterYear",
        "subRegionsRelativePath",
        "subRegionsHierarchyRelativePath",
        "shapeRelativePath",
        "variables"
      ],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
